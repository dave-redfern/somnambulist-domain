<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Somnambulist\Domain\Tests\Support\Stubs\Models\User" table="users">
        <id name="id" type="user_id">
            <generator strategy="NONE"/>
        </id>

        <embedded name="name" class="Somnambulist\Domain\Tests\Support\Stubs\Models\Name" use-column-prefix="false"/>
        <embedded name="email" class="Somnambulist\Domain\Entities\Types\Identity\EmailAddress" use-column-prefix="false"/>
        <embedded name="password" class="Somnambulist\Domain\Entities\Types\Auth\Password" use-column-prefix="false"/>

        <field name="createdAt" column="created_at" type="datetime"/>
        <field name="updatedAt" column="updated_at" type="datetime"/>

        <one-to-many field="groups" target-entity="UserGroup" mapped-by="root" orphan-removal="true">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
